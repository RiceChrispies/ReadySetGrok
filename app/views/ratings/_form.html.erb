<%= form_for([@subject, @subject.ratings.build]) do |f| %>
 
  <p>
	<div class="row">
  
  <br>
  <div class="small-2 large-4 columns">
    <% if current_user %>
	  <%= rating_for @subject, 'rating', half_show: true %>
      <br>
	<% end %>
    <%= f.label :body %><br>
    <%= f.text_area :body, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </p>
<% end %>